{% extends 'base.html.twig' %}

{% block title %}Player{% endblock %}

{% block body %}
    <div class = "container">
        <div class= "row">
            <div class ="col-12">
                <h1>{{ player.Name }}</h1>
            </div>
        </div>

        <div class = "row">
            <div class ="col-6">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ player.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ player.Name }}</td>
                        </tr>

                        <tr>
                            <th>Nick Name</th>
                            <td>{{ player.NickName }}</td>
                        </tr>                
                    </tbody>
                </table>
            </div>
        </div>

        

        <div class ="row">
            <div class="col-4">
                <a class ="btn btn-primary" href="{{ path('player_edit', {'id': player.id}) }}">Edit</a>
            </div>
            <div class="col-4">
                {{ include('player/_delete_form.html.twig') }}
            </div>
        </div>

        <div class ="row">
            <div class="col-12">
                <a href="{{ path('player_index') }}"><- Back to List</a>
            </div>
        </div>        

        
    </div>
{% endblock %}
