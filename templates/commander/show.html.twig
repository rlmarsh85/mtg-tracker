{% extends 'base.html.twig' %}

{% block title %}Commander{% endblock %}

{% block body %}
    <h1>Commander</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commander.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ commander.Name }}</td>
            </tr>
            <tr>
                <th>Scryfall_URL</th>
                <td>{{ commander.ScryfallURL }}</td>
            </tr>
            <tr>
                <th>Colors</th>
                <td>
                  {% for color in commander.Colors %}
                    {{ color.name }}
                  {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('commander_index') }}">back to list</a>

    <a href="{{ path('commander_edit', {'id': commander.id}) }}">edit</a>

    {{ include('commander/_delete_form.html.twig') }}
{% endblock %}
