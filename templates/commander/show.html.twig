{% extends 'base.html.twig' %}

{% block title %}{{ commander.Name }}{% endblock %}

{% block body %}
    <div class = "container">
        <h1>{{ commander.Name }}</h1>

        <div class = "row">
            <div class = "col-8">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ commander.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ commander.Name }}</td>
                        </tr>
                        <tr>
                            <th>Scryfall_URL</th>
                            <td>{{ commander.ScryfallURL }}</td>
                        </tr>
                        <tr>
                            <th>Colors</th>
                            <td>
                            {% for color in commander.Colors %}
                                {{ color.name }}
                            {% endfor %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class = "row">
            <div class = "col-6">
                <a class = "btn btn-primary" href="{{ path('commander_edit', {'id': commander.id}) }}">Edit</a>
            </div>
            <div class = "col-6">
                {{ include('commander/_delete_form.html.twig') }}
            </div>
        </div>

        <a href="{{ path('commander_index') }}"><- Back to List</a>
    </div>
{% endblock %}
