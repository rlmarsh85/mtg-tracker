{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block body %}
    <div class = "container">
        <h1>{{ deck.Name }}</h1>

        <div class = "row">
            <div class = "col-6">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ deck.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ deck.Name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ deck.Description }}</td>
                        </tr>
                        <tr>
                            <th>Primary Format</th>
                            <td>{{ deck.PrimaryFormat }}</td>
                        </tr>

                        <tr>
                            <th>Primary Player</th>
                            <td>{{ deck.PrimaryPlayer }}</td>
                        </tr>

                        <tr>
                            <th>Colors</th>
                            <td>{{ deck.Colors|join(', ') }}</td>
                        </tr>        

                        <tr>
                            <th>Commander(s)</th>
                            <td>{{ deck.Commanders|join(', ') }}</td>
                        </tr>                              
                    </tbody>
                </table>
            </div>
        </div>

        
        <div class = "row">
            <div class = "col-4">
                <a class = 'btn btn-primary' href="{{ path('deck_edit', {'id': deck.id}) }}">Edit</a>
            </div>
            <div class = "col-4">
                {{ include('deck/_delete_form.html.twig') }}
            </div>
        </div>
        

        <a href="{{ path('deck_index') }}"><- Back to List</a>
    </div>
{% endblock %}
