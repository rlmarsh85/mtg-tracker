{% extends 'base.html.twig' %}

{% block title %}Deck index{% endblock %}

{% block body %}
    <h1>Deck index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Format</th>
                <th>Player</th>
                <th>Color(s)</th>
                <th>Commander(s)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deck in decks %}
            <tr>
                <td>{{ deck.id }}</td>
                <td>{{ deck.Name }}</td>
                <td>{{ deck.Description }}</td>
                <td>{{ deck.PrimaryFormat }}</td>
                <td>{{ deck.PrimaryPlayer }}</td>
                <td>
                  {{ deck.Colors|join(', ') }}

                </td>
                <td>
                  {{ deck.Commanders|join(', ') }}

                </td>
                <td>
                    <a href="{{ path('deck_show', {'id': deck.id}) }}">show</a>
                    <a href="{{ path('deck_edit', {'id': deck.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('deck_new') }}">Create new</a>
{% endblock %}
