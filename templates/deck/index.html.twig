{% extends 'base.html.twig' %}

{% block title %}Decks{% endblock %}

{% block body %}
    <div class = "container">
        <div class ="row">
            <div class="col-12">
                <h1>Decks</h1>
            </div>
        </div>

        <div class ="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Format</th>
                            <th>Color(s)</th>
                            <th>Commander(s)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for deck in decks %}
                        <tr>
                            <td>{{ deck.id }}</td>
                            <td>{{ deck.Name }}</td>
                            <td>{{ deck.PrimaryFormat }}</td>
                            <td>
                            {{ deck.Colors|join(', ') }}

                            </td>
                            <td>
                            {{ deck.Commanders|join(', ') }}

                            </td>
                            <td>
                                <a href="{{ path('deck_show', {'id': deck.id}) }}">show</a>
                                <a href="{{ path('deck_edit', {'id': deck.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class ="row">
            <div class="col-12">
                <a class = "btn btn-primary" href="{{ path('deck_new') }}">Create new</a>
            </div>
        </div>

    </div>
{% endblock %}
